<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h2>All Restaurants</h2>
      <ul class="list-unstyled">
        <% @restaurants.each do |restaurant| %>
          <li class="mb-3">
            <div class="card" style="width: 100%;">
              <div class="card-body">
                <h5 class="card-title"><%= restaurant.name %></h5>
                <h6 class="card-subtitle mb-2 text-muted">Located in <%= restaurant.address %></h6>
                <p class="card-text">
                  Lorem ipsum, dolor sit amet consectetur adipisicing elit. Sed quo eveniet quae vel harum? Nostrum nemo fuga ad quisquam harum molestias suscipit, accusantium delectus pariatur illo quas vero doloremque sapiente.
                </p>
                <%= link_to "Read More", restaurant_path(restaurant), class: "card-link" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
